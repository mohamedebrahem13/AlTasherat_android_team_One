<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.home.language.LanguageFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toEndOf="@+id/view_rectangle"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_rectangle"
        android:layout_width="4dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:background="@color/primary"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="19dp" />

    <RadioGroup
        android:id="@id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="8dp">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/selector_radio_button_background"
            android:button="@null"
            android:drawableStart="@drawable/image_flag_ar"
            android:drawablePadding="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:text="@string/arabic"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextView.Bold" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/selector_radio_button_background"
            android:button="@null"
            android:drawableStart="@drawable/image_flag_en"
            android:drawablePadding="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:text="@string/english"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextView.Bold" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>