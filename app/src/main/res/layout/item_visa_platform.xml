<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:orientation="vertical"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_title_first_part"
            style="@style/TextView.Heavy"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text_title_background"
            android:lines="1"
            android:padding="4dp"
            android:textColor="@color/white"
            tools:text="استخرج التأشيرات" />

        <TextView
            android:id="@+id/text_title_second_part"
            style="@style/TextView.Heavy"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="1"
            android:paddingHorizontal="8dp"
            tools:text="السياحية بسهولة" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_title_first_part">

        <LinearLayout
            android:id="@+id/layout_visa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image_tourism_visa"
            android:gravity="center">

            <Button
                android:id="@+id/button_visa"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:backgroundTint="@color/secondary"
                android:paddingVertical="0dp"
                android:textAppearance="@style/Font.Heavy"
                tools:text="تأشيرات سياحية" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_visa"
                style="@style/TextView.Heavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/shape_text_outline"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="اطلب\nالان التأشيرة" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>