<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/text_title_first_part"
        style="@style/TextView.Heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_text_title_background"
        android:padding="4dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="استخرج التأشيرات" />

    <TextView
        android:id="@+id/text_title_second_part"
        style="@style/TextView.Heavy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="@id/text_title_first_part"
        app:layout_constraintStart_toEndOf="@id/text_title_first_part"
        app:layout_constraintTop_toTopOf="@id/text_title_first_part"
        tools:text="السياحية بسهولة" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_title_first_part">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_visa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_tourism_visa">

            <Button
                android:id="@+id/button_visa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:backgroundTint="@color/secondary"
                android:textAppearance="@style/Font.Heavy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="تأشيرات سياحية" />

            <TextView
                android:id="@+id/text_visa"
                style="@style/Font.Heavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_text_outline"
                android:padding="8dp"
                android:lineSpacingExtra="5dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="اطلب\nالان التأشيرة" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>