<resources>
    <declare-styleable name="CustomButtonOnBoarding">
        <attr name="customText" format="string" />
        <attr name="customImage" format="reference" />
    </declare-styleable>
    <declare-styleable name="Theme">
        <attr name="splashBackgroundColor" format="color"/>
        <attr name="splashTextColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="CustomHorizontalIndicator">
        <attr name="indicatorCount" format="integer" value="3" />  <attr name="activeColor" format="color" value="@color/your_active_color" />
        <attr name="inactiveColor" format="color" value="@color/your_inactive_color" />
    </declare-styleable>
</resources>
