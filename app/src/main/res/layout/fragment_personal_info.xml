<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".features.personal_info.presentation.ui.PersonalInfoFragment">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_back_arrow"
        android:clickable="true"
        android:contentDescription="Back Arrow"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text" />

    <Button
        android:id="@+id/button_more"
        android:layout_width="71dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/bg_input"
        android:clickable="true"
        android:padding="0dp"
        android:text="المزيد"
        android:textAppearance="@style/Font.Bold"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_profile"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:cropToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_first_name"
        style="@style/TextView.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="الإسم الأول"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>